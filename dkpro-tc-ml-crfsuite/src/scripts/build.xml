<project basedir="../.." default="separate-jars">
	<import>
		<url url="http://dkpro-core-asl.googlecode.com/svn/built-ant-macros/tags/0.6.0/ant-macros.xml"/>
	</import>

	<!-- 
	  - Output package configuration
	  -->
	<property name="outputPackage" value="de/tudarmstadt/ukp/dkpro/tc/crfsuite/lib"/>

	<target name="local-maven">
		<property name="install-artifact-mode" value="local"/>
		<antcall target="separate-jars"/>
	</target>

	<target name="remote-maven">
		<property name="install-artifact-mode" value="remote"/>
		<antcall target="separate-jars"/>
	</target>

	<target name="separate-jars" depends="install-executables"/>

	<target name="install-executables">
		<property name="version.bin" value="0.12"/>

		<mkdir dir="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/tc/crfsuite/bin/linux-x86_32"/>
		<mkdir dir="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/tc/crfsuite/bin/linux-x86_64"/>
		<mkdir dir="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/tc/crfsuite/bin/windows-x86_32"/>
		<mkdir dir="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/tc/crfsuite/bin/osx-x86_64"/>

		<get 
    		src="http://hunpos.googlecode.com/files/hunpos-1.0-macosx.tgz" 
    		dest="target/download/hunpos-1.0-macosx.tar.gz" 
    		skipexisting="true"/>
		<gunzip 
			src="target/download/crfsuite-macosx.tar.gz"
			dest="target/download/crfsuite-macosx.tar"/>
		<untar 
			src="target/download/crfsuite-macosx.tar"
			dest="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/core/tc/crfsuite/bin/osx-x86_64">
			<patternset>
				<include name="*/*" />
			</patternset>
			<mapper type="flatten" />
		</untar>
		<copydir 
			src="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/core/hunpos/bin/windows-x86_32" 
			dest="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/core/hunpos/bin/windows-x86_64"/>
		<propertyfile
		    file="target/crfsuiteBinary/de/tudarmstadt/ukp/dkpro/tc/crfsuite/bin/osx-x86_64/manifest.properties">
			<entry  key="crfsuite" value="executable"/>
		</propertyfile>

		<jar 
			destfile="target/de.tudarmstadt.ukp.dkpro.core.tc.crfsuite-${version.bin}.jar" 
			compress="true">
			<fileset dir="target/crfsuiteBinary">
				<include name="META-INF/**/*"/>
				<include name="**/bin/**/*"/>
			</fileset>
		</jar>

		<generate-pom 
			groupId="de.tudarmstadt.ukp.dkpro.tc"
			artifactId="de.tudarmstadt.ukp.dkpro.tc.crfsuite-bin" 
			version="${version.bin}"/>

		<install-artifact 
			file="target/de.tudarmstadt.ukp.dkpro.tc.crfsuite-bin-${version.bin}.jar"
			groupId="de.tudarmstadt.ukp.dkpro.core"
			artifactId="de.tudarmstadt.ukp.dkpro.tc.crfsuite-bin" 
			version="${version.bin}"/>
		<clean-pom/>
		<delete dir="target/crfsuiteBinary"/>
	</target>
</project>